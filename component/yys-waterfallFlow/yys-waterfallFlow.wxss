.page_index{
  width: 100%;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  border: 1px solid rebeccapurple;
}

.page_left{
  width: 50%;
}

.page_right{
  width: 50%;
}

.page_image{
  width: 100%;
}

.page_title{
  width: 100%;
